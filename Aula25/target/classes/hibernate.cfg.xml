<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url"> jdbc:postgresql://localhost:5432/banco25</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="show_sql">false</property>
        <mapping class="com.mycompany.aula25.PessoaFisica"/>
        <mapping class="com.mycompany.aula25.NotaFiscal"/>
        <mapping class="com.mycompany.aula25.ItemNota"/>
        <mapping class="com.mycompany.aula25.Produto"/>
        <mapping class="com.mycompany.aula25.PessoaJuridica"/>
        
    </session-factory>
</hibernate-configuration>
